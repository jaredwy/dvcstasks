[#-- @ftlvariable name="action" type="com.atlassian.bamboo.ww2.actions.chains.admin.ViewPlanConfiguration" --]
[#-- @ftlvariable name="" type="com.atlassian.bamboo.ww2.actions.chains.admin.ViewPlanConfiguration" --]
[#if plan.buildDefinition.repository?exists]
    [#assign repo = plan.buildDefinition.repository /]
    [#if repo.key == 'com.atlassian.bamboo.plugin.system.repository:svn']
        [#if plan.buildDefinition.inheritRepository]<span class="note">[@ww.text name="repository.inherit.note"/]</span>[/#if]
        [#if repo.username?has_content]
            [@ww.label labelKey='repository.svn.username' name='plan.buildDefinition.repository.username' /]
        [#else]
            [@ww.label labelKey='repository.svn.username' value="<i>[none specified]</i>" escape='false' /]
        [/#if]
        [@ww.label labelKey='repository.svn.authentication' name='plan.buildDefinition.repository.authType' /]
        [@ww.label labelKey='repository.svn.keyFile' name='plan.buildDefinition.repository.keyFile' hideOnNull='true' /]
    [#else]
        [@ww.text name='bulkAction.svn.notSvn' /]
    [/#if]
[#else]
    [@ww.text name='bulkAction.svn.notPlugin' /]
[/#if]